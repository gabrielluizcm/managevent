<%- include('includes/head'); %>
<%- include('includes/navbar'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="display-1 text-center">New event</h1>
      <main class="container">
        <div class="box text-center" id="divLogin">
          <% if (event._id) { %>
            <form action="/events/edit/<?= event._id %>" method="POST">
          <% } else { %>
            <form action="/events/create/" method="POST">
          <% } %>
              <input type="hidden" name="_csrf" value=<%= csrfToken %>>
              <div class=" form-group">
                <label>Name
                  <input type="text" class="form-control" name="name" value="<%= event.name %>" />
                </label>
              </div>
              <div class="form-group">
                <label>Date and Hour
                  <input type="datetime-local" class="form-control" name="dateTime" value="<%= event.dateTime %>"/>
                </label>
              </div>
              <div class="form-group">
                <label>Location
                  <input type="text" class="form-control" name="location" value="<%= event.location %>"/>
                </label>
              </div>
              <div class="form-group">
                <label>Description
                  <textarea name="description" cols="24" rows="8" class="form-control" style="resize: none;"><%= event.description %></textarea>
                </label>
              </div>
              <%- include('includes/messages'); %>
              <button type="submit" class="btn btn-primary my-3">Create</button>
            </form>
        </div>
      </main>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer'); %>